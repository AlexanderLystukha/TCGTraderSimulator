<Window x:Class="PIIIProject.Views.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Views"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="PromptWindow" Height="auto" Width="350"
        Background="#21386E" 
        Foreground="#FFCB05"
        BorderBrush="#FFCB05"
        BorderThickness="4"
        WindowStartupLocation="CenterScreen"
        Icon="../Images/prompt icon.ico"
        FontFamily="{StaticResource CustomFont}">
    <Grid Margin="0,0,15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0" Height="50" Width="35" Source="../Images/prompt icon.ico" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,5,5"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Foreground="#FFCB05" TextWrapping="Wrap" Text="Something has occurred!" FontSize="16" x:Name="pageTitle" Margin="5,10,0,10"/>
            <TextBlock Margin="5,0,0,0" TextWrapping="Wrap" Foreground="snow" FontSize="12" Grid.Row="1" Text="this is what hapenned (where error msg goes) hello" x:Name="pageContent"/>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1"  Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Height="30" Width="60" Content="OK" Click="returnBtn_Clicked" x:Name="backBtn" 
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" Padding="3"/>
            <Button Height="30" Width="80"  Visibility="Hidden" Content="CANCEL" Click="returnBtn_Clicked" x:Name="backBtn2"
                     Grid.Column="1" Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2"/>

        </Grid>
    </Grid>
</Window>
