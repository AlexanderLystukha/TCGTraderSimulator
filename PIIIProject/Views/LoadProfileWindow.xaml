<Window x:Class="PIIIProject.Views.LoadProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Views"
        mc:Ignorable="d"
        Title="LoadProfileWindow" Height="430" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#21386E" 
        Foreground="#FFCB05"
        Icon="../Images/icon.ico"
        FontFamily="{StaticResource CustomFont}">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Banner -->

        <Button x:Name="backBtn" Background="Transparent" BorderThickness="0" HorizontalAlignment="left" 
                    Margin="10,0,0,0" Width="30" Click="BtnBack_Click">
            <Image Source="../Images/backarrow.png" Height="50" Grid.Column="0" RenderTransformOrigin="0.8,0.5" />
        </Button>


        <Image Grid.Row="0" Grid.ColumnSpan="2" Source="../Images/Titles/Profiles.png"
         Height="60" Margin="0,10,0,0"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        

        <!-- Row 1 of Profiles -->

        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" x:Name="profiles1">
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2"/>
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2"/>
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />

        </StackPanel>

        <!-- Row 2 of Profiles -->
        
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" x:Name="profiles2">
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />
            <Button Content="Empty" Margin="15" Width="220" Height="30" Click="BtnLoadProfile_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />
        </StackPanel>

        
        <!-- Utility Buttons -->
        
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="2"
                    HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label VerticalAlignment="Center" Foreground="snow" >Profile to delete:</Label>
            <TextBox Width="100" x:Name="profileToDelete" Padding="2" VerticalAlignment="Center" BorderThickness="2.5"/>
            <Button Content="Delete" Width="100" Height="25" Margin="10" Click="BtnDelete_Click"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" />

        </StackPanel>

    </Grid>
</Window>
