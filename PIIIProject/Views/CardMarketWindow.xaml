<Window x:Class="PIIIProject.Views.MarketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Views"
        mc:Ignorable="d"
        Title="MarketWindow" Height="510" Width="790" 
        Background="#21386E" Foreground="#FFCB05"
        WindowStartupLocation="CenterScreen"
        Icon="../Images/icon.ico"
        FontFamily="{StaticResource CustomFont}">

    <!-- Marketplace layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Banner -->
        <Image Source="../Images/Titles/marketplace.png" Height="100"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Grid.Row="0"/>

        <Button x:Name="backBtn" Background="Transparent" BorderThickness="0" HorizontalAlignment="left" 
                    Margin="10,0,0,0" Width="50" Click="BackBtn_Click">
            <Image Source="../Images/backarrow.png" Height="60" Grid.Column="0" RenderTransformOrigin="0.8,0.5" />
        </Button>



        <!-- ListBox -->
        <Border Grid.Row="1" BorderBrush="#FFCB05" BorderThickness="5" Margin="30,0,30,0">
            <ListBox x:Name="lbMarket" Foreground="snow" Background="#3466AF" PreviewMouseLeftButtonDown="LbMarket_Click"
             Width="720" HorizontalAlignment="Center">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- Using a UniformGrid with two columns to wrap the items into two columns -->
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <!-- Image for the card -->
                            <Image Grid.ColumnSpan="2" Grid.RowSpan="5" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center"
                              Margin="0,0,5,0" Grid.Column="0" Grid.Row="0" Source="{Binding CardSource}"/>

                            <!-- Labels for item data -->
                            <Label Grid.Column="2" Grid.Row="0" Content="Name:" Foreground="#FFCB05"/>
                            <Label Grid.Column="3" Grid.Row="0" Content="{Binding Name}" Foreground="#21386E"/>

                            <Label Content="Type:" Grid.Column="2" Grid.Row="1" Foreground="#FFCB05"/>
                            <Label Grid.Column="3" Grid.Row="1" Content="{Binding CardType}" Foreground="snow"/>

                            <Label Content="Quality:" Grid.Column="2" Grid.Row="2" Foreground="#FFCB05"/>
                            <Label Grid.Column="3" Grid.Row="2" Content="{Binding Quality}" Foreground="snow"/>

                            <Label Content="Element:" Grid.Column="2" Grid.Row="3" Foreground="#FFCB05"/>
                            <Label Grid.Column="3" Grid.Row="3" Content="{Binding ElementalType}" Foreground="snow"/>

                            <Label Content="Price:" Grid.Column="2" Grid.Row="4" Foreground="#FFCB05"/>
                            <Label Grid.Column="3" Grid.Row="4" Content="{Binding Price}" Foreground="#28cc25"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>


        <!-- Utility -->

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="boosterShopBtn" Height="30" Width="150" Content="Booster Shop" Grid.Column="2"
                    Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2" 
                    FontSize="14" Click="BoosterShopBtn_Click"/>

            <TextBlock Grid.Row="0" Margin="10" Grid.Column="0"
            VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20">Balance: 
              <TextBlock x:Name="balanceCount" Text="0"/>₽</TextBlock>

        </Grid>
    </Grid>


</Window>
