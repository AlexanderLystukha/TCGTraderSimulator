<Application x:Class="PIIIProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PIIIProject"
             StartupUri="MainWindow.xaml"
             >
    <Application.Resources>

        <FontFamily x:Key="CustomFont">pack://application:,,,/../../../Fonts/guardener.ttf#guardener</FontFamily>

        <!-- Font -->
        
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="{StaticResource CustomFont}"/>
        </Style>


        <!-- Button -->
        
        <Style TargetType="Button">
            <Style.Resources>

                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2" />
                </Style>

            </Style.Resources>

            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>

        </Style>

        <!-- TextBox -->
        
        <Style TargetType="TextBox">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2" />
                </Style>
            </Style.Resources>

            <Setter Property="BorderBrush" Value="#FFCB05"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="3,0,0,0"/>

        </Style>

        <!-- Border -->
        
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="2" />
        </Style>

        <!-- Radio Buttons -->

        <Style TargetType="RadioButton">

            <Setter Property="BorderBrush" Value="#FFCB05"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Foreground" Value="snow"/>
        </Style>
        
    </Application.Resources>
</Application>
