<Window x:Class="PIIIProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="550" Background="#21386E"
        WindowStartupLocation="CenterScreen"
        Icon="./Images/icon.ico"
        FontFamily="{StaticResource CustomFont}">
    
    <Grid Margin="10,10,10,10">

        <!-- Row definiotions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Banner -->
        <Image Grid.Row="1" Source="./Images/Titles/Title.png" 
                   Margin="15" HorizontalAlignment="Center"/>

        <!-- Buttons -->
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label VerticalAlignment="Center" Margin="10" Foreground="#FFCB05" >Profile name:</Label>
            <TextBox Width="110" Height="30" x:Name="profileName" Grid.Row="2" Margin="10" BorderThickness="2.5"/>

            <Button Grid.Row="2" Content="New Profile" FontSize="12" Background="#3466AF" BorderBrush="#FFCB05"
                    BorderThickness="2.5" Foreground="#FFCB05" Margin="10" Height="35"  Width="110" Click="BtnNewProfile_Click"/>
            
        </StackPanel>
        
        <Button Grid.Row="3"  Content="Load Profile"  FontSize="11.8" 
                Background="#3466AF" Foreground="#FFCB05" BorderBrush="#FFCB05" BorderThickness="2.5"
                Margin="15" Height="35"  Width="110" Click="BtnLoad_Click"/>
    </Grid>
</Window>
